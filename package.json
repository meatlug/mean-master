{
  "name": "mean-master",
  "version": "1.0.0",
  "description": "Mean app using Node,Angular 4,Typescript, Mocha and Webpack",
  "main": "server.js",
  "engines": {
    "node": "8.1.0"
  },
  "homepage": "https://github.com/meatlug/mean-master",
