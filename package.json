  "scripts": {
    "build:docker": "npm run build:prod && docker build -f Dockerfile -t mean:latest .",
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:prod": "webpack --env=prod",
    "ci:travis": "npm run lint",
    "clean:install": "npm set progress=false && npm install",
    "clean": "rimraf public/",
    "docker": "docker",
    "lint": "npm run tslint \"client/**/*.ts\"",
    "start": " npm run clean && npm run build:prod && npm run nodemon",
    "dev": "npm run clean && concurrently \"npm run build:dev\" \"npm run nodemon\"",
    "nodemon": "nodemon server.js",
    "rimraf": "rimraf",
    "docker": "docker",
    "eslint": "eslint",
    "tslint": "tslint",
    "webpack": "webpack"
  },
